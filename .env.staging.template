# Environment
NODE_ENV=staging
ENVIRONMENT=staging

# Application URLs
DOMAIN=staging.your-domain.com
FRONTEND_URL=https://staging.your-domain.com
BACKEND_URL=https://api-staging.your-domain.com
API_BASE_URL=https://api-staging.your-domain.com/api/v1

# Database (staging database)
POSTGRES_USER=staging_user
POSTGRES_PASSWORD=staging_password_change_me
POSTGRES_DB=ai_arbeidsdeskundige_staging
POSTGRES_SERVER=db
POSTGRES_PORT=5432

# Redis
REDIS_URL=redis://:staging_redis_password@redis:6379/0
REDIS_PASSWORD=staging_redis_password

# LLM Provider (can use same as production for testing)
LLM_PROVIDER=anthropic
ANTHROPIC_API_KEY=your_staging_anthropic_key
OPENAI_API_KEY=your_staging_openai_key
GOOGLE_API_KEY=your_staging_google_key

# Security (less restrictive for testing)
JWT_SECRET_KEY=staging_jwt_secret_32_characters_min
CORS_ORIGINS=https://staging.your-domain.com,http://localhost:5173
TRUSTED_HOSTS=staging.your-domain.com,localhost

# SSL (can use staging certificates)
SSL_ENABLED=true
LETSENCRYPT_EMAIL=staging@your-domain.com
LETSENCRYPT_STAGING=true

# Performance (lower for staging)
UVICORN_WORKERS=2
CELERY_WORKER_CONCURRENCY=2

# Monitoring
LOG_LEVEL=DEBUG
METRICS_ENABLED=true
ALERT_ENABLED=false

# Backup (reduced for staging)
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7

